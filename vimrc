" use vi instead of vim
set nocompatible

" syntax highlighting options
filetype indent plugin on
syntax on

" swithcing to another buffer without saving
set hidden

" document searching options
set hlsearch
set ignorecase
set smartcase

" editing options
set backspace=indent,eol,start
set autoindent
set number
set shiftwidth=4
set softtabstop=4
set expandtab
